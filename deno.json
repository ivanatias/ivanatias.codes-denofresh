{
	"tasks": {
		"start": "deno run -A --watch=static/,routes/ dev.ts"
	},
	"importMap": "./import_map.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "preact"
	},
	"fmt": {
		"files": {
			"include": ["/"]
		},
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 2,
			"singleQuote": true,
			"proseWrap": "preserve",
			"semiColons": false
		}
	}
}
